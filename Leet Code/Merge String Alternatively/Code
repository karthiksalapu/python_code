class Solution(object):
    def mergeAlternately(self, word1, word2):
        new_word = ""

        max_length = max(len(word1), len(word2))

        for i in range(max_length):
            add_word = ""
            if len(word1) > i:
                add_word += word1[i]
            if len(word2) > i:
                add_word += word2[i]
            new_word += add_word

        return(new_word)
        
